<tr>
  <td style="width:67px">
    <img data-src="{{ card_image_url }}/tiny/{{ decklist.code }}_front.jpg" alt="{{ decklist.identity }}" style="width:51px;height:71px" class="lazyload">
  </td>
  <td>
    <div>
        <a href="{{ path('decklist_view', { 'decklist_uuid': decklist.uuid, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a>

        <div class="small pull-right">
            <a href="{{ path('decklist_view', { 'decklist_uuid': decklist.uuid, 'decklist_name': decklist.prettyname|e('url') }) }}">
                <span class="social-icons">
                    <span class="social-icon-like">
                        <span class="glyphicon glyphicon-heart"></span> <span class="num">{{decklist.nbvotes}}</span>
                    </span>
                    <span class="social-icon-favorite">
                        <span class="glyphicon glyphicon-star"></span> <span class="num">{{decklist.nbfavorites}}</span>
                    </span>
                    <span class="social-icon-comment">
                        <span class="glyphicon glyphicon-comment"></span> <span class="num">{{decklist.nbcomments}}</span>
                    </span>
                </span>
            </a>
        </div>
    </div>
    <div class="small">
      <i>{{ decklist.lastpack }}</i>
    </div>
    <div class="small">
      <div>
          <a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username|e('url')}) }}" class="{{ decklist.usercolor }}">{{ decklist.username }}</a>
          <small class="reputation">{{ decklist.reputation }}</small>
      </div>
      <div>
        {% if decklist.tournament %}
        <span class="text-success">
                <span class="glyphicon glyphicon-certificate"></span> {{ decklist.tournament }}
            </span>
          {% endif %}
      </div>
    </div>
  </td>
</tr>
