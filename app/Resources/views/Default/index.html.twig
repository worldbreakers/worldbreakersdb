{% extends '/layout.html.twig' %}

{% block head %}
<script type="text/javascript">
WBDB.pages.enhanceIndexPage();
WBDB.Decklist = {{ decklist|json_encode|raw }};
</script>

<script type="application/ld+json">
{
   "@context": "http://schema.org",
   "@type": "WebSite",
   "url": "{{ worldbreakersdb_url }}",
   "potentialAction": {
     "@type": "SearchAction",
     "target": "{{ worldbreakersdb_url }}/find/?q={search_term_string}",
     "query-input": "required name=search_term_string"
   }
}
</script>
{% endblock %}
{% block body %}

<div class="container" id="index_page">
  {% include '/Default/site-title.html.twig' %}
  <div class="row">
    <div class="col-md-8">
      {% include '/Default/decklist_of_the_week.html.twig' %}
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div> <!-- .container -->

{% endblock %}
