{% extends '/layout.html.twig' %}

{% block body %}

    <div class="container rulings">
        <h1>Rulings</h1>
        <article class="rules rulings">
            <h2>All cards with clarification and F.A.Q</h2>
            <nav class="inner rulings">
                <ul>
                    {% for card in list %}
                        {% if not card.rulings is empty %}
                            <li><a href="#{{ card.code }}">{{ card.title }} {{card.position}}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
            {% for card in list %}
                {% if not card.rulings is empty %}
                    <h4><a id="{{ card.code }}" href="{{ path('cards_zoom', {card_code: card.code}) }}">{{ card.title }}</a> ({{ card.pack.name }}, {{card.position}})</h4>
                    <ul class="rulings-list">
                        {% for ruling in card.rulings %}
                            <li>{{ ruling.text|raw }}</li>
                            {% endfor %}
                    </ul>
                {% endif %}
            {% endfor %}
        </article>

    </div>

{% endblock %}