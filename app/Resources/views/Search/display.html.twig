{% block title %}{{ title }}{% endblock %}

{% block head %}
<script>
WBDB.pages.enhanceDisplayPage();
</script>
{% endblock %}

{% block body %}
<div class="container">

{{ searchbar|raw }}

<div id="list">

{{ pagination|raw }}

{% if cards|length > 0 %}

{% block main %}{% endblock %}

{% else %}

<div class="col-sm-12" style="margin-top:10px">
  <p class="alert alert-warning">Your query didn't match any card. See the <a href="{{ path('search_syntax') }}">search syntax reference</a> for help.</p>
</div>

{% endif %}

{{ pagination|raw }}

</div>

</div>

{% endblock %}
