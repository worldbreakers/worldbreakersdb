{% extends '/layout.html.twig' %}

{% block title %}All Sets{% endblock %}

{% block body %}
<div class="container">
   <div id="list">
      <table class="rwd-table table table-striped table-condensed">
         <thead>
            <tr>
               <th>Name</th>
               <th>Cards</th>
               <th>Release Date</th>
            </tr>
         </thead>
         {% for pack in data %}
            <tr class="odd">
               <td data-th="Name">
                  <a href="{{ pack.url }}" class="card" data-index="{{ pack.code }}">
                     <span class="icon icon-{{ pack.code }}"></span>
                     {{ pack.name }}
                  </a>
               </td>
               <td data-th="Count">
                  {% if pack.total > 0 %}
                     {{ pack.total }}
                  {% else %}
                     {{ pack.known }}
                  {% endif %}
               </td>
               <td data-th="Date">
                  {{ pack.available }}
               </td>
            </tr>
         {% endfor %}
      </table>
   </div>
</div>

{% endblock %}
